<h1 align="center">Listado de categorías</h1>

<div align="center">
  <%= will_paginate %>
  <% @categories.each do |categoria| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="articulo-titulo">
            <%= link_to "#{categoria.name}", category_path(categoria) %>
          </li>
          <li><small><%= pluralize(categoria.articles.count,"artículo") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>