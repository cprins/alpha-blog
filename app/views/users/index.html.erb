<h1 align="center"> Todods los Alpha Bloggers</h1>
<div align="center">
  <%= @usuarios.each do |usuario| %>
    <ul class ="listing">
      <div class ="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(usuario), user_path(usuario) %> </li>
          <li class="articulo-titulo">
            <%= link_to usuario.username, user_path(usuario) %>
          </li>
          <li><small><%= pluralize(usuario.articles.count,"articlulo") if usuario.articles %></small></li>
        </div>
      </div>  
    </ul>
  <% end %>
</div>