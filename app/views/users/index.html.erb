<h1 align="center"> Todos los Alpha Bloggers</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |usuario| %>
    <ul class ="listing">
      <div class ="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(usuario), user_path(usuario) %> </li>
          <li class="articulo-titulo">
            <%= link_to usuario.username, user_path(usuario) %>
          </li>
          <li><small><%= pluralize(usuario.articles.count,"articlulo") if usuario.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Editar este usuario", edit_user_path(usuario) %></li>
            <li><%= link_to "Eliminar este usuario", user_path(usuario), method: :delete,
                    data: {confirm: "¿Estas seguro que deseas eliminar este usuario y sus artículos?"} %></li>
          <% end %>
        </div>
      </div>  
    </ul>
  <% end %>
  <%= will_paginate %>
</div>