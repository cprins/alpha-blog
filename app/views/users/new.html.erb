<h1 align="center">Regístrate a ALPHA-BLOG</h1>
<%= render 'compartido/errores', :parametros => {:parametro1 => 'new' } , obj: @usuario %>

<div class='row'>
  <div class='col-xs-12'> 
    <!--  los parametros, como las clases, se pasan en un hash -->
    <%= form_for(@usuario, :html => {class: "form-horizontal", role: "form"}) do |f|  %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <!--  <%= f.label :username   %>   coloca la etiqueta con el nombre del campo -->
          <%= f.label "Código de usuario"  %>
        </div> 
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Introducir el código de usuario", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "E-mail"  %> <br/>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Introducir el e-mail" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label "Password"  %> <br/>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Introducir el password" %>
        </div>
      </div>
        
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">  
          <%= f.submit "Regístrate", class: 'btn btn-primary btn-lg' %> 
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [<%= link_to "Regresar a la lista de articulos" , articles_path, class: "link" %>]
    </div>
  </div>
</div>